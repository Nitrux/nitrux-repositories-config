#!/bin/bash

{
	>> /etc/apt/preferences printf "%s\n" \
		'########################################' \
		'#   DO NOT EDIT THIS FILE!             #' \
		'#   Your changes will be overwritten   #' \
		'########################################' \
		'' \
		'######################' \
		'#  Packages Priority #' \
		'######################' \
		'' \
		'Package: base-files' \
		'Pin: release *' \
		'Pin-Priority: -1' \
		'' \
		'Package: dash' \
		'Pin: release *' \
		'Pin-Priority: -1' \
		'' \
		'Package: initramfs-tools' \
		'Pin: release *' \
		'Pin-Priority: -1' \
		'' \
		'Package: initramfs-tools-bin' \
		'Pin: release *' \
		'Pin-Priority: -1' \
		'' \
		'Package: initramfs-tools-core' \
		'Pin: release *' \
		'Pin-Priority: -1' \
		'' \
		'Package: ufw' \
		'Pin: release *' \
		'Pin-Priority: -1' \
		'' \
		'Package: xterm' \
		'Pin: release *' \
		'Pin-Priority: -1' \
		'' 
}

apt -qq update
